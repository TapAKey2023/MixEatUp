  <header class="header flex-shrink-0">
    <div class="name-number">
      <%# <%= link_to "MixEatUp", root_path%>
    </div>
    <h1>Summary</h1>
  </header>
  <div class="label" data-controller="loading-page" style="height:70dvh;">
    <h2 class= "calc">Calculating Your Perfect Matches</h2>
      <img class= "load" src="https://t3.ftcdn.net/jpg/04/44/58/26/360_F_444582608_qDpK9F0g0lPUtnvxe5ndlkRLIgZM8S45.jpg" alt="menu">
      <h2 class= "choice-bold">Your Choices:</h2>
      <ul class="container ml-5 mr-5 loading-list">
        <% if cookies[:meal].present? %>

        <li  ><span class="loading-bold">Meal: </span><%= cookies[:meal].capitalize %></li>
        <% end %>

        <% if cookies[:occasion].present? %>
        <li  ><span class="loading-bold">Occasion: </span><%= cookies[:occasion].capitalize %></li>
        <% end %>
        <% if cookies[:city].present?%>
        <li  ><span class="loading-bold">Location: </span><%= cookies[:city] %></li>
        <% end %>
        <% if cookies[:total_price].present? %>
        <li  ><span class="loading-bold">Total price: </span><%= cookies[:total_price] %></li>
        <% end %>
        <% if cookies[:number_of_people].present? %>
        <li  ><span class="loading-bold">Number of people: </span><%= cookies[:number_of_people] %></li>
        <% end %>
        <% if cookies[:wheat].present? %>
        <li  ><span class="loading-bold">Sensitivity: </span>Wheat</li>
        <% end %>
        <% if cookies[:lactose].present? %>
        <li  ><span class="loading-bold">Sensitivity: </span>Lactose</li>
        <% end %>
        <% if cookies[:nuts].present? %>
        <li  ><span class="loading-bold">Sensitivity: </span>Nuts</li>
        <% end %>
        <% if cookies[:vegetarian].present? %>
        <li  ><span class="loading-bold">Preferences: </span> Vegetarian</li>
        <% end %>
      </ul>
      <h2 data-loading-page-target="listItems" class= "d-none mt-5 pt-5"><span class="loading-bold">Loading </span>
        <span data-loading-page-target="listItems" class= "d-none">.</span>
        <span data-loading-page-target="listItems" class= "d-none">.</span>
        <span data-loading-page-target="listItems" class= "d-none">.</span>
      </h2>
</div>
